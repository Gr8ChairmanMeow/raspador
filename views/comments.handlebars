<div class="container">
    <div class="jumbotron">
        <h1>
            {{article}}
        </h1>
        <button class="btn-lg btn-danger">Home</button>
    </div>
</div>
<div id="wrapper">
    <div id="articles">
        <h2>Comments <!-- <img src="assets/images/burger.png" alt="eat" width="40"/> --></h2>
        <hr>
        <ol>
            {{#each notes}}
            <li>
                <p data-id={{this._id}} class="updateNote">
                    <p><u>{{this.title}}</u>
                        ( <button class="btn-sm btn-edit" data-id={{this._id}}>Edit</button>
                        <button class="btn-sm btn-delete" data-id={{this._id}}>Delete</button> )
                    </p>
                    <br /> &ldquo;{{this.body}}&rdquo;
                </p>
            </li>
            {{/each}}
        </ol>
    </div>
    <div id="notes"></div>
</div>